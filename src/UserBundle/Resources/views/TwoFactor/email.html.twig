{% extends '@SolidInvoiceCore/Layout/default_no_nav.html.twig' %}

{% block title %}
    {{ app_logo() }}
    {{ app_name }}
{% endblock title %}

{% block content %}
    <div class="row justify-content-center mt-7">
        <div class="col-lg-5 text-center">
            <div class="card mt-5">
                <div class="card-body py-5 px-lg-5">
                    {% if authenticationError %}
                        <div class="alert alert-danger">{{ authenticationError|trans(authenticationErrorData, 'SchebTwoFactorBundle') }}</div>
                    {% endif %}

                    <form class="form" action="{{ checkPathUrl ? checkPathUrl: path(checkPathRoute) }}" method="post">

                    <div class="svg-icon svg-icon-xl text-purple">
                        {{ icon('lock') }}
                    </div>
                    <h3 class="fw-normal text-dark mt-4">
                        2-step verification
                    </h3>
                    <p class="mt-4 mb-1">
                        We sent a verification code to your email.
                    </p>
                    <p>
                        Please enter the code in the field below.
                    </p>

                    <div class="row mt-4 pt-2">
                        <div class="col">
                            <input name="{{ authCodeParameterName }}" type="text" class="form-control form-control-lg text-center py-4" maxlength="6" autofocus autocomplete="one-time-code" inputmode="numeric" pattern="[0-9]*">
                        </div>
                    </div>

                    {% if isCsrfProtectionEnabled %}
                        <input type="hidden" name="{{ csrfParameterName }}" value="{{ csrf_token(csrfTokenId) }}">
                    {% endif %}

                    {% if displayTrustedOption %}
                        <div class="mt-4">
                            <label for="_trusted">
                                <input id="_trusted" type="checkbox" name="{{ trustedParameterName }}" /> {{ "Trust this device"|trans }}
                            </label>
                        </div>
                    {% endif %}

                    <button class="btn btn-outline-info btn-lg w-100 hover-lift-light mt-4" type="submit">
                        {{ "login"|trans({}, 'SchebTwoFactorBundle') }}
                    </button>
                    </form>
                </div>
            </div>

            <p class="text-center text-muted mt-4">
                Didn't receive it?
                <a href="#!" class="text-decoration-none ms-2">
                    Resend code
                </a>
            </p>
        </div>
    </div>

{% endblock content %}

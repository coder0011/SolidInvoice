                 </form>#}
            </div>
        </twig:block>
        <twig:block name="modal_footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
            <button type="button" class="btn btn-primary" data-action="live#action:prevent" data-live-action-param="save">{{ 'Save'|trans }}</button>
        </twig:block>
    </twig:BootstrapModal>

